<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.last.Gui.SignUpAccountController"
            prefWidth="400" prefHeight="500"
            style="-fx-background-color: #ffffff;">
    <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
        <Label text="Buat Akun"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="emailField" promptText="Email" maxWidth="300"/>
        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>

        <Button text="Daftar" onAction="#handleRegister" maxWidth="300"
                style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>

        <Label fx:id="statusLabel" textFill="red" wrapText="true"/>
    </VBox>
</AnchorPane>
