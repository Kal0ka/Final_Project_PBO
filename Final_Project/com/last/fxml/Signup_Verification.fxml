<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.last.Gui.SignUpVerificationController"
            prefWidth="400" prefHeight="500"
            style="-fx-background-color: #f4f4f4;">
    <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
        <Label text="Verifikasi Identitas"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="nameField" promptText="Nama" maxWidth="300"/>
        <TextField fx:id="nimNipField" promptText="NIM / NIP" maxWidth="300"/>
        <ComboBox fx:id="roleComboBox" promptText="Pilih Peran" maxWidth="300"/>

        <Label fx:id="errorLabel" textFill="red"/>

        <Button text="Verifikasi"
                onAction="#handleVerify"
                maxWidth="300"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>

        <Hyperlink text="Kembali ke Login" onAction="#goToLogin"/>
    </VBox>
</AnchorPane>
